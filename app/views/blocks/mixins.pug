mixin itemcart(array)
    each val in array 
        tr
            td(scope='row')
                img(src=val.url, alt="imgproduct" style ="width: 150px")
            td.text-success=val.name 
            td=val.price 
            td
                input#count(type="number", name="" value =val.count style ="width: 50px")
            td= val.price 
            td
                a(href="#") 
                    i.fas.fa-trash-alt