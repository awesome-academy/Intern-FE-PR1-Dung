mixin CarouselBodyProduct(array,i)
    .container.pb-5.position-relative
        #demo.carousel.slide.position-relative(data-ride='carousel')
            ul.carousel-indicators
                li(data-target=`#demo${i}` data-slide-to='0')
                li.active(data-target=`#demo${i}` data-slide-to='1')
                li(data-target=`#demo${i}` data-slide-to='2')
            .carousel-inner
                .carousel-item.active.carousel-item-left
                    +itemCarouselProduct(array)
                .carousel-item.carousel-item-next.carousel-item-left
                    +itemCarouselProduct(array)
                .carousel-item
                    +itemCarouselProduct(array)
mixin pagination(total,active)
    ul.pagination
        li.page-item
            a.page-link(href='#') Trang trước
        - for (let i = 1; i <= total; i++)
            if (i === active )
                li.page-item.active
                    a.page-link(href="#")= i
            else if ( i > active+1 && i <total-1 )
                li.page-item.hiddent
                    a.page-link() .
            else
                li.page-item
                    a.page-link(href="#")= i
        li.page-item
            a.page-link(href='#') Trang tiếp 
