mixin Nav(array)
    ul.nav.flex-lg-colummn.d-flex
        each val in array 
            li.navFooter__item
                i.fas.fa-chevron-right.mr-1
                a.navFooter__link(href="#")=val

//- product item column 
mixin ItemColumn(array)
    each val in array
        div(style=val.width,class=val.pricesub? 'card mr-4 mt-4 position-relative item-subprice ':' position-relative card mr-4 mt-4  ')
            .imgcard.d-lg-block.d-none
            img.card-img-top(src=val.url alt='Card image cap')
            .card-body(style='text-align:center')
                h5.card-title
                    a(href="product-detail.html")=val.name
                div(style='color :yellow ; font-size: 70%')
                    i.fas.fa-star
                    i.fas.fa-star
                    i.fas.fa-star
                    i.fas.fa-star
                    i.far.fa-star
                span.card-text.mr-1(style='color:red;')= val.price
                if(val.pricesub)
                    span(style='text-decoration: line-through; color:#706a6a;').card-text-price=val.pricesub
            .hoverShow.position-absolute
                button.btn.btn-success.addcart(type='button') thêm vào giỏ hàng
                button.btn.btn-success.mb-3(type='button') 
                    i.fas.fa-search
                    
