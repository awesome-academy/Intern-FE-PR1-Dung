mixin ItemColumn(array)
    each val,index in array
        div(style=val.width,class=val.pricesub? `card mr-4 mt-4 p-2 position-relative item-subprice` :` cardNB-${index+1} p-2 position-relative card mr-4 mt-4  `)
            .imgcard.d-xl-block.d-none
            img.card-img-top(src=val.url alt='Card image cap')
            .card-body(style='text-align:center')
                h5.card-title
                    a(href="product-detail.html")=val.name
                div(style='color :yellow ; font-size: 70%')
                    i.fas.fa-star
                    i.fas.fa-star
                    i.fas.fa-star
                    i.fas.fa-star
                    i.far.fa-star
                span.card-text.mr-1(style='color:red;')= val.price
                if(val.pricesub)
                    span(style='text-decoration: line-through; color:#706a6a;').card-text-price=val.pricesub
            .hoverShow.position-absolute
                button.btn.btn-success.addcart.mt-3.d-none.d-xl-inline-block(type='button') ADD TO CART
                button.btn.d-inline-block.d-xl-none
                    i.fas.fa-shopping-cart
                button.btn.btn-success(type='button') 
                    i.fas.fa-search
