							+ItemRow([{url :'../../images/spx2-13.png',name :'cây ngũ gia bì',price:'520.000',pricesub:'640.000'},{url :'../../images/spx2-8.png',name :'cây cung điện',price:'520.000'},{width:'width: 48%;',url :'../../images/spx2-14.png',name :'cây tài lộc',price:'420.000',pricesub:'1000.000'},{width:'width: 48%;',url :'../../images/spx2-11.png',name :'cây phát tài',price:'300.000'},{width:'width: 48%;',url :'../../images/spx2-4.png',name :'cây vạn lộc',price:'250.000',pricesub:'300.000'},{width:'width: 96%;',url :'../../images/spx2-5.png',name :'cây xương rồng',price:'320.000',pricesub:'1000.000'}])
					.container__BuyMoreProduct.col-12.col-xl-8
						.container__BuyMoreProduct--title 
							span Sản Phẩm khuyến mãi
							.button
								a.caro(href='#demo' data-slide='prev' style='opacity: 1; left: -10%;').mr-1
