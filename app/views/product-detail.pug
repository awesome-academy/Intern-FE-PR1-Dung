extends layout/layout

block vars
	-title = 'Green House product-detail'
	-bodyClass = 'product__detail'
block container
	include ./variable.pug
	section.productDetail 
		.productDetail__wrap.container 
			nav(aria-label='breadcrumb')
				ol.breadcrumb
					li.breadcrumb-item
						a(href='index.html') Home
					li.breadcrumb-item.active(aria-current='page') Cây dạ lam 
			.productDetail__body.row 
				.producDetail__body--image.col-12.col-lg-6 
					#pills-tabContent.tab-content
						each val,index in Img 
							.tab-pane.fade(role='tabpanel' aria-labelledby=`img${index+1}-tab` id=`img${index+1}` class =index==1 ? 'active show':'')
								img.img-fluid(src=val.src alt=val.alt )
					ul#pills-tab.nav.nav-pills.mb-3.d-flex.justify-content-center(role='tablist')
						each val,index in Img 
							li.nav-item
								a.nav-link(class=index==0 ? 'active ':'' id=`img${index+1}-tab` data-toggle='pill' href=`#img${index+1}` role='tab' aria-controls=`img${index+1}` aria-selected=index==0 ? 'true':'false' ) 
									img(src=val.src alt=val.alt )
				.producDetail__body--content.col-12.col-lg-6
					header.producDetail__body--header 
						h3.nameProduct Cây dạ lam	
						div.star(style='color :yellow ')
							i.fas.fa-star
							i.fas.fa-star
							i.fas.fa-star
							i.fas.fa-star
							i.fas.fa-star
						span.card-text.mr-2(style='color:red;') 400.000 VND
						span(style='text-decoration: line-through; color:#706a6a;').card-text-price 520.000 VND
					section.producDetail__body--descr 
							p cây mọc thành bụi thưa, thân vươn thẳng với chiều 
								|cao cây trung bình từ 0.8-1.2m. Lá hình trứn,mép lá 
								|nguyên, gân lá nổi rõ, phiến rộng khoảng từ 15-20cm. 
								|Lá có mày xanh đậm ở mặt trên,quanh gân có màu trắng sữa, mặt dưới lá màu nhạt hơn,
								| lá cây dạ lam mọc cahcs , cuống lá dài khi rụng để lại cái khía màu nâu nhạt
					section.producDetail__body--number.d-flex 
						span.mr-2 Số Lượng
						button.count -
						button.number 1
						button.count + 
					section.link 
						a(href="#").buyNow.mr-3 MUA NGAY 
						a(href="#").search.mr-3
							i.fas.fa-search
						input#checkHeard.mr-3(type="checkbox", name="checkHeard" hidden) 
						label(for="checkHeard")
							i.fas.fa-heart
							i.far.fa-heart 
						div.evaluate.d-flex.mt-2
							section.body__tooltip.facebook.mr-5
								.quote 0
								.content
									i.fab.fa-facebook-square.mr-1 
									span Like
							section.body__tooltip.tweet.mr-5
								.quote 15
								.content
									i.fab.fa-twitter.mr-1 
									span tweet
							section.body__tooltip.plus.mr-5
								.quote 10
								.content
									i.fas.fa-plus-square.mr-1 
									span share
			.productDetail__body--tab 
				ul.nav.nav-tabs(role='tablist')
					li.nav-item
						a.nav-link.active(data-toggle='tab' href='#tabs-1' role='tab') THÔNG TIN SẢN PHẨM
					li.nav-item
						a.nav-link(data-toggle='tab' href='#tabs-2' role='tab') KHÁCH HÀNG ĐÁNH GIÁ
					li.nav-item
						a.nav-link(data-toggle='tab' href='#tabs-3' role='tab') THẺ TAG
					// Tab panes
				.tab-content
					#tabs-1.tab-pane.active(role='tabpanel')
