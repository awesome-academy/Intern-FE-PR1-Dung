				.container__product
					.container__product--title 
						span Sản Phẩm cùng loại
						.button
							a.caro(href='#demo1' data-slide='prev' style='opacity: 1; left: -10%;').mr-1
								i.fas.fa-chevron-left(style='color:#5969f6; font-size:30px;')
